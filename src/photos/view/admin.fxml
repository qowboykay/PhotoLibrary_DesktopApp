<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane minWidth="-Infinity" prefHeight="320.0" prefWidth="220.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <VBox layoutX="10" layoutY="10" prefWidth="200.0" spacing="10.0">
        <Text text="Admin Window" />
        <ListView fx:id="userListView" minWidth="-Infinity" prefHeight="200.0" prefWidth="150.0" />
        <HBox alignment="TOP_CENTER" prefWidth="700.0" spacing="2.0">
            <Button fx:id="createUserButton" onAction="#onCreateUserButtonClicked" text="Create User" />
         <Button fx:id="deleteUserButton" onAction="#onDeleteUserButtonClicked" text="Delete User" />
        </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="150.0" spacing="2.0">
         <children>
            <Button fx:id="exitButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#onExitButtonClicked" prefHeight="29.0" prefWidth="85.0" text="Exit" />
            <Button fx:id="logoutButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#onLogoutButtonClicked" prefHeight="29.0" prefWidth="85.0" text="Logout" />
         </children>
      </HBox>
    </VBox>
</AnchorPane>
